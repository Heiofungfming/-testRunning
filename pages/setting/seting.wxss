.head {
  background-color: gray;
  display:  flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20px;
  margin-bottom: 30px;
  height: 164px;
  color: #ffff;
  font-family:  -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  box-shadow: 0 3px 10px #ccc;
  /* margin-bottom: 10px; */
}

.head image{
  width: 70px;
  height: 70px;
  border: solid white 2px;
}

.avatar {
  width: 60px;
  height: 60px;
  border-radius: 100%;
  margin-bottom: 40px;
  
}

.item{
   line-height: 50px;
   padding: 0 20px 0 20px;
   border: 1px solid rgb(248, 248, 248);  
}

.edit{
  float:  right;
  width:20px;
  height: 20px;
  margin-top: 12px;
}